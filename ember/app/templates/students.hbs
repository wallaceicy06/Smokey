<h3>Students</h3>

{{outlet}}

{{#if notEmpty}}
  <table class="table">
    <thead>
      <tr>
        <th class="col-md-1">ID</th>
        <th class="col-md-3">Name</th>
        <th class="col-md-3">NetID</th>
        <th class="col-md-3"><!-- Edit Controls --></th>
      </tr>
    </thead>
    <tbody>
      {{#each controller as |student|}}
        <tr>
          <th scope="row">{{student.model.id}}</th>
          <td>
            {{#view 'inline-text-field' valueBinding=student.model.name}}
              {{student.model.name}}
            {{/view}}
          </td>
          <td {{action 'toggleEdit' onEvent='doubleClick'}}>
            {{#view 'inline-text-field' valueBinding=student.model.netid}}
              {{student.model.netid}}
            {{/view}}
          </td>
          <td>
            <button {{action 'destroy'}} class="btn btn-default">Destroy</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/if}}
