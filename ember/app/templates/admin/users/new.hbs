<form {{action "create" on="submit"}}>
  <div class="form-group">
    <label for="username">Username</label>
    {{input type="text" class="form-control" value=newUsername}}
  </div>
  <div class="form-group">
    <label for="firstName">First Name</label>
    {{input type="text" class="form-control" value=newFirstName}}
    <label for="lastName">Last Name</label>
    {{input type="text" class="form-control" value=newLastName}}
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  {{#link-to 'admin.users.index' tagName='button' class='btn btn-default'}}Close{{/link-to}}
</form>

